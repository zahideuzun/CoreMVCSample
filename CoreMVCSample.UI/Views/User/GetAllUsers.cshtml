@model List<CoreMVCSample.UI.Models.Core.VM.UserAddVM>

<table class="table">
	<thead>
	<th>Kullanıcı Adı</th>
	<th>Kullanıcı Email</th>
	<th>Kullanıcı Parola</th>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.UserName</td>
				<td>@item.Email</td>
				<td>@item.Password</td>
				<td> <a type="submit" class="btn btn-success" asp-controller="User" asp-action="AddOrUpdate" asp-route-Id="@item.Id"/>Güncelle<a/> </td>
				<td> <a type="submit" class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-Id="@item.Id"/>Sil<a/> </td>
			</tr>
		}

	</tbody>
</table>